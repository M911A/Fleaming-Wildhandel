---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Carousel from '../components/Carousel.astro';
import TribbleContent from '../components/TribbleContent.astro';
import OeffnungzeitenAnschrift from '../components/OeffnungszeitenAnschrift.astro'
import InformationsPickture from '../components/Informations-Pickture.astro';
import Maps from '../components/Maps.astro';
import Partner from '../components/Partner.astro';
import ImgTextImg from '../components/ImgTextImg.astro';
import { SITE_TITLE, SITE_DESCRIPTION, overlayUrl } from '../consts';
import Overlay from '../components/Overlay.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<!-- <Overlay overlayUrl={overlayUrl} /> -->
		<img alt="Banner Bild" class="banner" src="/banner.AVIF">
		<main>
			<h2>Wildbret - küchenfertig für Gastronomie und Feinkost</h2>
			<InformationsPickture />
			<br><br><br>
			<h2>Einige unserer "Kostproben"</h2>
			<Carousel />
			<br><br><br>
			<h2>Team Fläming Wild - Was wir tun</h2>  
		</main>
			<TribbleContent /><br>
		<main>
			<h2>Stark regional</h2>
			<Partner />
			<OeffnungzeitenAnschrift /><br><br>
		</main>
		<ImgTextImg />
		<main>
			<br><br>
			<h2>Unser Standort</h2>
			<Maps />
			<br>
		</main>
		<Footer />

        <!-- Instagram Button -->
        <a href=https://www.instagram.com/flaeming_wildhandel/" target="_blank" class="instagram-button">
            <img src="/Instagram_icon.png" alt="Instagram" class="instagram-logo">
        </a>
		<!-- Instagram Button -->
	</body>
</html>

<style>
	.banner {
		border-radius: 0px;
		width: 100vw;
	}
	.h2 {
		margin-bottom: -7%;
	}

	@media (max-width: 750px) {
		.h2 {
			margin-left:4%;
			margin-right: 4%;
		}
	}
	@media (min-width: 1080px) {
		.instagram-button, .instagram-logo {
			display: none;
		}
	}
    .instagram-button {
        position: fixed;
        bottom: 20px;
        left: 20px;
        z-index: 1000;
    }

    .instagram-logo {
        width: 45px; 
        height: auto;
    }
</style>
